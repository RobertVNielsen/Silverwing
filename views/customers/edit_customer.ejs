<!DOCTYPE html>
<html>
    <head>
        <% include ../includes/header.ejs %>

        <script>
          function populate() {
            document.getElementById("id").value = "<%= customer._id %>";
            document.getElementById("companyName").value = "<%= customer.title %>";
            document.getElementById("priceTable").value = "<%= customer.priceTable %>";
            document.getElementById("address").value = "<%= customer.address %>";
            document.getElementById("representative").value = "<%= customer.representative %>";
            document.getElementById("phone").value = "<%= customer.phone %>";
            document.getElementById("email").value = "<%= customer.email %>";
          }
        </script>

    </head>

    <body onload="populate()">
      <div class="main-div">
        <% include ../includes/nav.ejs %>

        <div>
          <form class="submission" action="/customers/update_customer" method="POST">
            <label for="name">Customer name</label>
            <input name="name" id="companyName" type="text" />
            <br />

            <label for="priceTable">Price table</label>
            <select name="priceTable" id="priceTable">
              <option value="">-- Select a price table --</option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
            </select><br/><br/>

            <label for="address">Address</label>
            <input type="text" id="address" name="address" />
            <br />

            <label for="representative">Representative</label>
            <input name="representative" id="representative" type="text" />
            <br />

            <label for="phone">Phone number</label>
            <input type="text" id="phone" name="phone" />
            <br />

            <label for="email">Email</label>
            <input name="email" id="email" type="text" />
            <br /><br />

            <input name="id" id="id" type="hidden" />
            <button class="wide" type="submit">Update Customer!</button>
          </form>
        </div>

        <% include ../includes/footer.ejs %>
      </div>
    </body>
</html>
