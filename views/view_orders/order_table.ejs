          }

          function hereDoc(f) {
            return f.toString().
                replace(/^[^\/]+\/\*!?/, '').
                replace(/\*\/[^\/]+$/, '');
          }

          function getDaysAgo(b) {
            var a = new Date();
            a.setDate(a.getDate() - b);

            let mm = (a.getMonth() + 1)
            if (mm < 10) {
              mm = "0" + mm
            }
            let dd = a.getDate()
            if (dd < 10) {
              dd = "0" + dd;
            }

            return a.getFullYear() + "-" + mm + "-" + dd;
          }

          function defaultDates() {
            document.getElementById("startDate").value = getDaysAgo(14);
            document.getElementById("endDate").value = getDaysAgo(0);
